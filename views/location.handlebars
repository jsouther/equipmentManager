    <h3>View/Remove Locations</h3>

    <table>
      <thead>
        <th>Street Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
		<th>Edit</th>
		<th>Delete</th>
      </thead>
      <tbody>
        {{#each location}}
        <tr>
          <td>{{street_address}}</td>
          <td>{{city}}</td>
          <td>{{state}}</td>
          <td>{{zip}}</td>
          <td><a href="/location/{{Id}}">Edit Location</a></td>
		  <td><button onclick="deleteLocation({{Id}})">Delete</button></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
	